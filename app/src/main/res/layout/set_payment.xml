<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/bgLight"
    tools:context=".SetPaymentActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_user"
        android:contentDescription="Logo"
        android:layout_marginBottom="20dp" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Payment"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="24dp"/>

    <!-- Lưới các nút -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBank"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Bank Transfer"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/btn_bank"
            android:elevation="6dp"
            app:rippleColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaypal"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="PayPal"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/btn_paypal"
            android:elevation="6dp"
            app:rippleColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStripe"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Stripe"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/btn_stripe"
            android:elevation="6dp"
            app:rippleColor="@color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGooglePay"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="Google Pay"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/btn_googlepay"
            android:elevation="6dp"
            app:rippleColor="@color/white"/>
    </GridLayout>

</LinearLayout>
